<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_green"
    tools:context=".TicTacToe">

    <TextView
        android:id="@+id/result_tic_tac_toe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/field_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/tic_tac_toe_blank_field"
                app:backgroundTintMode="add"
                app:elevation="0dp"
                tools:backgroundTint="@color/black" />

            <Button
                android:id="@+id/field_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/tic_tac_toe_blank_field"
                app:backgroundTintMode="add"
                app:elevation="0dp"
                tools:backgroundTint="@color/black" />

            <Button
                android:id="@+id/field_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/tic_tac_toe_blank_field"
                app:backgroundTintMode="add"
                app:elevation="0dp"
                tools:backgroundTint="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <Button
                android:id="@+id/field_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/tic_tac_toe_blank_field"
                app:backgroundTintMode="add"
                app:elevation="0dp"
                tools:backgroundTint="@color/black" />

            <Button
                android:id="@+id/field_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/tic_tac_toe_blank_field"
                app:backgroundTintMode="add"
                app:elevation="0dp"
                tools:backgroundTint="@color/black" />

            <Button
                android:id="@+id/field_6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/tic_tac_toe_blank_field"
                app:backgroundTintMode="add"
                app:elevation="0dp"
                tools:backgroundTint="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/field_7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/tic_tac_toe_blank_field"
                app:backgroundTintMode="add"
                app:elevation="0dp"
                tools:backgroundTint="@color/black" />

            <Button
                android:id="@+id/field_8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/tic_tac_toe_blank_field"
                app:backgroundTintMode="add"
                app:elevation="0dp"
                tools:backgroundTint="@color/black" />

            <Button
                android:id="@+id/field_9"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/tic_tac_toe_blank_field"
                app:backgroundTintMode="add"
                app:elevation="0dp"
                tools:backgroundTint="@color/black" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>